      include input-group_password
    .col-12.col-md-6.mb-4  
      include input-group_password_prepend
    .col-12.col-md-6.mb-4  
      include input-group_password_both  
    .col-12.col-md-6.mb-4  
      include input-group_card   
    .col-12.col-md-6.mb-4  
      include input-group_card_small
    .col-12.col-md-6.mb-4  
      include input-group_card_large
    .col-12.mb-4.d-flex.flex-wrap
      include input-group_number_small
      .mr-3  
      include input-group_number
      .mr-3
      include input-group_number_large  
//- script
  include input-group_password.js  

